# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/saas_ecosystem"
ORGANIZATION_ID="your_organization_id"

# Optional: Development Database (for testing)
DATABASE_URL_DEV="postgresql://user:password@localhost:5432/saas_ecosystem_dev"

# Agent Configuration
AGENT_ENCRYPTION_KEY="your-256-bit-encryption-key-here"
AGENT_REGISTRY_URL="http://localhost:3001"
AGENT_TIMEOUT=30000
AGENT_MAX_RETRIES=3

# AI Provider Configuration
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# Cross-Repository Coordination
SAAS_ECOSYSTEM_URL="http://localhost:3000"
SPEC_DRIVEN_URL="http://localhost:3002"

# Authentication (for web interface)
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3001"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOGGING_LEVEL="info"

# Agent Configuration Defaults
DEFAULT_AGENT_CATEGORY="SUPPORT"
DEFAULT_MEMORY_ENABLED=true
DEFAULT_LEARNING_ENABLED=true
DEFAULT_TOOL_DISCOVERY_ENABLED=true

# Performance Monitoring
METRICS_ENABLED=true
METRICS_INTERVAL_SECONDS=300  # 5 minutes
PERFORMANCE_TRACKING=true
METRICS_COLLECTION=true
AUDIT_LOGGING=true

# Security Configuration
ENCRYPT_MEMORY=true
SECURE_STORAGE=true
AUDIT_TRAIL=true

# Migration Configuration
MIGRATION_BACKUP_PATH="./backups"
MIGRATION_BATCH_SIZE=100
MIGRATION_TIMEOUT=300

# Development Settings
DEVELOPMENT_MODE=false
DEBUG_SQL=false
NODE_ENV="development"
PORT=3001

# Testing Configuration
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/app_agents_test"
TEST_TIMEOUT=10000